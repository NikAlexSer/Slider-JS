!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Slider Builder
    %link{:rel=>"stylesheet", :href=>"styles.css"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"}
    %script{:src => "slider.js", :type => "application/javascript"}
    %script{:src => "handlebars-v4.0.5.js", :type => "application/javascript"}
  %body
    %script{:id => "entry-template", :type => "text/x-handlebars-template"}
      .slider-preview
        {{#each urls}}
        %div
          %img{:src =>"{{this}}", :width =>"120px"}
          %span Comment PLZ!
          %input{:class=>"comment", :type=>"text", :size=>"40"}
          %input{:name => "button", :type => "submit", :value => "Удалить"}
        {{/each}}
        %input{:name => "button", :type => "submit", :value => "Сохранить"}

    %script{:id => "entry-template2", :type => "text/x-handlebars-template"}
      .slider
        .holder
          %ul{:class=>"content-holder"}
            {{#each imgs}}
            %li
              %div
                {{#with ../comment}}
                %img{:src=>"{{../this}}"}
                {{/with}}
            {{/each}}

    .input-form
      %label{:for=>"arrayURL"}
        %p Вставьте ваш массив ссылок
      %form
        %textarea{:id=>"arrayURL", :rows=>"10", :cols=>"50"}
      %input{:name=>"button", :type=>"submit", :value=>"Сохранить"}
