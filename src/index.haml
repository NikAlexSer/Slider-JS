!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Slider Builder
    %link{:rel=>"stylesheet", :href=>"./styles/styles.css"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"}
    %script{:src => "http://cdnjs.cloudflare.com/ajax/libs/jquery.transit/0.9.9/jquery.transit.min.js"}
    %script{:src => "./js/main.js", :type => "application/javascript"}
    %script{:src => "handlebars-v4.0.5.js", :type => "application/javascript"}
  %body
    .input-form
      %label{:for=>"arrayURL"}
        %p Вставьте ваш массив ссылок
      %form
        %textarea{:id=>"arrayURL", :rows=>"10", :cols=>"50"}
      %input.js-data{:name=>"button", :type=>"submit", :value=>"Сохранить"}

    .slider-preview.js-slider-preview
    .slider.js-slider

    %script{:id => "slider-template", :type => "text/x-handlebars-template"}
      %p.control-next >>
      %p.control-prev <<
      %ul.js-content-holder.content-holder
        {{#each slidesTemp}}
        %li
          %div
            %img{:src=>"{{img}}"}
            {{#if comments}}
            %span.comment {{comments}}
            {{/if}}
        {{/each}}
        .nav.js-nav
          {{#each slidesTemp}}
          %span{:"data-number" => "{{@index}}"}
          {{/each}}

    %script{:id => "preview-template", :type => "text/x-handlebars-template"}
      {{#each urls}}
      %div
        %img{:src =>"{{this}}"}
        %span Comment PLZ!
        %input.comment{:type=>"text", :size=>"40", :value=>"{{@index}}"}
        %input.btnDel{:name => "button", :type => "submit", :value => "Удалить"}
      {{/each}}
      %input.btnSave{:name => "button", :type => "submit", :value => "Сохранить"}